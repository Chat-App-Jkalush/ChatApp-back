reviewer:
  - name: CodeRabbit
    model: gpt-4
    style: concise
    tone: professional
    comment_mode: inline
    summary: true
    language: en

rules:
  - enforce-docstrings
  - enforce-type-annotations
  - no-unused-imports
  - no-todo-comments
  - restrict-shared-deps-import-patterns: '^@common/'

exclude_paths:
  - node_modules/

settings:
  auto_review_on_pr: true
